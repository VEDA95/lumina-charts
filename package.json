{
  "name": "lumina-charts",
  "version": "0.0.1",
  "private": true,
  "description": "High-performance WebGL charting library for 1M+ data points",
  "author": "Lumina Charts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:VEDA95/lumina-charts.git"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,css,json}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "pnpm": {
    "overrides": {}
  },
  "workspaces": [
    "packages/*"
  ]
}
